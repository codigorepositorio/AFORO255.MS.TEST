{
  "Routes": [
    {

      /////////////////////////INICIO - API SECURITY/Seguridad////////////////////////////////////////
      //"applicationUrl": "http://localhost:5001/api/auht"
      "DownstreamPathTemplate": "/api/auth",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/token",
      "UpstreamHttpMethod": [ "Post" ]
    },

    /////////////////////////INICIO - API INVOICE/FACTURAS ////////////////////////////////////////////
    {
      //"applicationUrl": "http://localhost:5002/api/invoice"
      "DownstreamPathTemplate": "/api/invoice",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/factura",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "SECURITY-TOKEN",
        "AllowedScopes": []
      }
    },
    /////////////////////////FIN////////////////////////////////////////////


    /////////////////////////INICIO - API Notification/Mails////////////////////////////////////////////
    {
      //"applicationUrl": "http://localhost:5004/api/Notification"
      "DownstreamPathTemplate": "/api/Notification",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/api/mail",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "SECURITY-TOKEN",
        "AllowedScopes": []
      }
    },

    /////////////////////////FIN////////////////////////////////////////////


    /////////////////////////INICIO - API PAY/Pagos////////////////////////////////////////////
    {
      //"applicationUrl": "http://localhost:5004/api/transaction/Pay"
      "DownstreamPathTemplate": "/api/Transaction/Pay",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ],
      "UpstreamPathTemplate": "/api/pago",
      "UpstreamHttpMethod": [ "Post" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "SECURITY-TOKEN",
        "AllowedScopes": []
      }
    },
    /////////////////////////FIN////////////////////////////////////////////

    /////////////////////////INICIO - API TRANSACTION/History//////////////////////////////////
    {
      //"applicationUrl": "http://localhost:5005/api/History/1"
      "DownstreamPathTemplate": "/api/History/{Idinvoice}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5005
        }
      ],
      "UpstreamPathTemplate": "/api/movimiento/{Idinvoice}",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "SECURITY-TOKEN",
        "AllowedScopes": []
      }
    }
    /////////////////////////FIN////////////////////////////////////////////
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
